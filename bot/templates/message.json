{
    "type": "bubble",
    "hero": {
        "type": "image",
        "url": "{{ artwork }}",
        "size": "full",
        "aspectRatio": "20:13",
        "aspectMode": "cover",
        "action": {
            "type": "uri",
            "uri": "{{ url }}"
        }
    },
    "body": {
        "type": "box",
        "layout": "vertical",
        "contents": [
            {
                "type": "text",
                "text": "{{ title }}",
                "weight": "bold",
                "size": "xl",
                "align": "center",
                "margin": "none"
            },
            {
                "type": "text",
                "text": "アーティスト",
                "align": "center",
                "margin": "xxl"
            },
            {
                "type": "text",
                "text": "{{ artist }}",
                "align": "center"
            }
        ]
    },
    "footer": {
        "type": "box",
        "layout": "vertical",
        "spacing": "sm",
        "contents": [
            {
                "type": "button",
                "style": "link",
                "height": "sm",
                "action": {
                    "type": "uri",
                    "label": "WEBSITE",
                    "uri": "https://linecorp.com"
                }
            },
            {
                "type": "spacer",
                "size": "sm"
            }
        ],
        "flex": 0
    }
}