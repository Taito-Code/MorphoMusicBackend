{
  "type": "bubble",
  "hero": {
    "type": "image",
    "url": "{{ artwork }}",
    "size": "full",
    "aspectRatio": "20:13",
    "aspectMode": "cover"
  },
  "body": {
    "type": "box",
    "layout": "vertical",
    "contents": [
      {
        "type": "text",
        "text": "{{ title }}",
        "weight": "bold",
        "size": "xl",
        "align": "center",
        "margin": "none"
      },
      {
        "type": "text",
        "text": "{{ artist }}",
        "align": "center"
      }
    ]
  },
  "footer": {
    "type": "box",
    "layout": "vertical",
    "spacing": "sm",
    "contents": [
      {
        "type": "button",
        "style": "primary",
        "height": "sm",
        "action": {
          "type": "uri",
          "label": "URL",
          "uri": "{{ url }}"
        }
      },
      {
        "type": "spacer",
        "size": "sm"
      }
    ],
    "flex": 0
  }
}
